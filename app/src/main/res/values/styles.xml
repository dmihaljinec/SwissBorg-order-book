<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="OrderBook.Ticker.Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSwissBorgGreen</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OrderBook.Order.Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OrderBook.Ticker.Value" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
